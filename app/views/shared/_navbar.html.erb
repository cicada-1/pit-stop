
<div class="navbar navbar-expand-sm navbar-lewagon">
  <div class="navbar-left">
  <%= link_to "/", class: "navbar-brand" do %>
    <span class="logo">PitStop</span>
  <% end %>

  </div>

  <div>
    <%= form_tag rooms_path, method: :get, class: "nav-search-box" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control nav-search",
        placeholder: "Find a PitStop"
        %>
    <% end %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse navbar-right" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto btn-spacing">
       <li class="nav-item">
        <%= link_to "/rooms/new", { class: "codepen-btn draw-border", id: "add-room-btn"} do %>
           Add PitStop
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to "/bands/new", { class: "codepen-btn draw-border", id: "add-band-btn"} do %>
           Add Band
        <% end %>
      </li>


      <% if user_signed_in? %>
        <li class="nav-item">
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "emma-copy.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

            <%= link_to "My bookings", "/bookings", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
