<div class="message-container <%=  message.user == current_user ? 'message-right' : 'message-left' %>" id="message-<%= message.id %>">
  <i class="author">
    <span><%= message.user.stage_name %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content %></p>
</div>
