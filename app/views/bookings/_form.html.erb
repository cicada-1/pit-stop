
<%= simple_form_for [@room, @booking] do |f| %>
  <div class="form-inputs">
    <%= f.input :band_name, collection: @user_bands, required: true %>
    <%= f.input :start_date, as: :date, html5: true, required: true %>
    <%= f.input :end_date, as: :date, html5: true, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, { class: " button btn btn-light", value: "Create Booking" } %>
  </div>
<% end %>
