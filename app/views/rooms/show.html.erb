
<div class="page-container">
  <%= render 'modal' %>
  <%= render partial: 'room_socials/modal' %>
  <%= render partial: 'rooms_reviews/modal'%>
  <%= render partial: 'bookings/modal' %>

  <div class="band-info">
 
    <div class="band-description-container">
      <div class="room-options">
        <% if @room.user_id == current_user.id %>
          <button
            type="button"
            id="btn-plus"
            data-toggle="modal"
            data-target="#editModal"
          >
          <i class="far fa-edit"></i>
          </button>
          <%= link_to room_path(@room), method: :delete, data: { confirm: "Are you sure?" }, id: 'btn-bin' do %>
            <i id="btn-bin" class="far fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    <div class="room-card">

      <h2 class="card-header"><%= @room.name.upcase %></h2>
      <p class="room-"><%= @room.city %></p>
      
      <div  class="description-text">
        <h2 class="card-header">My Bio</h2>
      <p class="room-decription"><%= @room.bio %></p>
      <h2 class="card-header">About Room</h2>
      <p class="room-decription"><%= @room.description %></p>
      <div class="room-info-icons">
        <p><i class="room-icons fas fa-car"></i>  <%= @room.parking %></p>
        <p><i class="room-icons fas fa-user-friends"></i> <%= @room.capacity%></p>
      </div>
    </div>
    </div>
    <div class="room-sm-icons">

      <h2 class="card-header">Social Media Profiles</h2>
      <div class="sm-icons">
        <% if @room.user_id == current_user.id %>
          <button
          type="button"
          class="card-btns"
          id="btn-plus"
          data-toggle="modal"
          data-target="#form_socials">
            <i class="fas fa-plus-square"></i> 
          </button>
        <% end %>

        <div class="social-media-icons">
          <% if @room_socials %>
            <% @room_socials.each do |item| %>
              <div class="room-social-icon">
                <% if item.social_type == "Instagram" %>
                  <%= link_to item.profile_url do %>
                    <i class="fab fa-instagram"></i>
                  <% end %>
                <% elsif item.social_type == "Twitter" %>
                  <%= link_to item.profile_url do %>
                    <i class="fab fa-twitter"></i>
                  <% end %>
                <% elsif item.social_type == "Facebook" %>
                  <%= link_to item.profile_url do %>
                    <i class="fab fa-facebook-square"></i>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>


    </div>
    <button
    type="button"
    id="booking-btn"
    data-toggle="modal"
    data-target="#booking_room"
  >Request Booking</button>
  </div>

  <!-- poster -->
  <div class="poster-container">
    <div class="poster-band">
    
    </div>
    </div>
  

    <div class="photos-container">
      <button
      type="button"
      class="card-btns"
      id="btn-plus"
      data-toggle="modal"
      data-target="#addPhotosModal"
    >
      <i class="fas fa-plus-square"></i>
      </button>
      <span class="card-header">Photos</span>
      <div class="photos-box">
      <%= image_tag("https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/small-living-rooms-bungalow-etna-nook-029-1608661123.jpg") %>
      <%= image_tag("https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/small-living-rooms-bungalow-etna-nook-029-1608661123.jpg") %>
      <%= image_tag("https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/small-living-rooms-bungalow-etna-nook-029-1608661123.jpg") %>
      <%= image_tag("https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/small-living-rooms-bungalow-etna-nook-029-1608661123.jpg") %>
    
      </div>
    </div>

<div class="room-review">
  <div class="room-review-header">
    <h2 class="card-header">Shoutouts</h2>
    <button
    type="button"
    id="add-review-btn"
    data-toggle="modal"
    data-target="#rooms_review">
      <i class="fas fa-plus-square"></i> 
      Add Review
    </button>
  </div>
  
  
  <% if @room_reviews %>
    <% @room_reviews.each do |item| %> 
      <div class="review-card">
        <strong class="review-author"><%= item.band.name %></strong>

        <% if item.band.band_members.select { |element| element.user == current_user }[0] %>
          <%= link_to "x", room_review_path(item), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>

        <span class="review-content"><%= item.content %></span>
      </div>
    <% end %>
  <% end %>
</div>
</div>
