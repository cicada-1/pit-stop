<div class="page-container">
  <%= render 'modal' %>
  <%= render partial: 'room_socials/modal' %>

  <%= link_to rooms_path do %>
    <i class="fas fa-undo-alt"></i> Back to all rooms
  <% end %>

  <div class="band-info">
    <div class="band-description-container">
    	<button
		type="button"
		id="btn-plus"
		data-toggle="modal"
		data-target="#editModal"
	>
	<i class="far fa-edit"></i>
	</button>
      <h2 class="card-header"><%= @room.name.upcase %></h2>
      <p>Bio: <%= @room.bio %></p>
    
    <div  class="description-text">
      <p>City: <%= @room.city %></p>
      <p>Capacity: <%= @room.capacity%></p>
      <p>Description: <%= @room.description %></p>
      <p>Parking: <%= @room.parking %></p>
    </div>

  <h2 class="card-header">Social Media Profiles</h2>

  <button
  type="button"
  class="card-btns"
  id="btn-plus"
  data-toggle="modal"
  data-target="#form_socials">
    <i class="fas fa-plus-square"></i> 
  </button>
    <% if @room_socials %>
      <% @room_socials.each do |item| %> 
        <%= link_to item.social_type, item.profile_url %>
        <%= link_to "x", room_social_path(item), method: :delete, data: {
          confirm: "Are you sure?" } %>
      <% end %>
    <% end %>

    </div>
  </div>

  <!-- poster -->
  <div class="poster-container">
    <div class="poster-band">
      <h2>POSTER</h2>
    </div>
    </div>
  

    <div class="photos-container">
      <button
      type="button"
      class="card-btns"
      id="btn-plus"
      data-toggle="modal"
      data-target="#addPhotosModal"
    >
      <i class="fas fa-plus-square"></i>
      </button>
      <span class="card-header">Photos</span>
      <div class="photos-box">
        <div class="picture"></div>
        <div class="picture"></div>
        <div class="picture"></div>
        <div class="picture"></div>
        <div class="picture"></div>
      </div>
    </div>


<div class="room-button-div">
  <button type="button" class="btn btn-danger">
    <%= link_to room_path(@room), method: :delete, data: { confirm: "Are you sure?" }, id: "red-delete-button" do %>
      <i class="far fa-trash-alt"></i> Delete this room
    <% end %>
  </button>
</div>

 
<div class="room-review">
  <h2>Shoutouts</h2>
  
  <button type="button" class="btn btn-primary">
    Add Review
  </button>
  <%= render partial: 'room_reviews/form_room_reviews'%>
  
  <% if @room_reviews %>
    <% @room_reviews.each do |item| %> 
      <div class="review-card">
        <p>
        <strong><%= item.band.name %></strong>
        <% if item.band.band_members.select { |element| element.user == current_user }[0] %>
          <%= link_to "x", room_review_path(item), method: :delete, data: {
            confirm: "Are you sure?" } %>
        <% end %>
        </p>
        <p><%= item.content %></p>
      </div>
    <% end %>
  <% end %>
</div>

</div>
